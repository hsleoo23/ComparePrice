.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}
.record-list {
  display: flex;
  flex-direction: column;
}
.record-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}
.record-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex-shrink: 0;
}
.record-date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  flex-shrink: 0;
}
.record-preview {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  font-size: 28rpx;
}
.product-name {
  color: #666;
  flex: 1;
  margin-right: 20rpx;
}
.product-price {
  color: #07c160;
  font-weight: bold;
}
.record-footer {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  margin-top: 0;
}
.item-count {
  font-size: 24rpx;
  color: #999;
}
.no-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}
.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  padding: 40rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  width: 80%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}
.delete-x {
  position: absolute;
  left: 30rpx;
  bottom: 10rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 10;
  cursor: pointer;
}
.delete-x:active {
  color: #888;
  background: none;
}
