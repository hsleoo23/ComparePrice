.search-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 0 24rpx;
}
.search-input {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
}
.search-btn {
  margin-left: 16rpx;
  height: 64rpx;
  padding: 0 32rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.chart-area {
  width: 90%;
  height: 400px;
  margin-top: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
}
.history-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin: 20rpx 24rpx 0 24rpx;
  padding: 16rpx 20rpx 8rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-height: 80px;
  max-width: 96%;
}
.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.price-info {
  font-size: 24rpx;
  color: #444;
  margin-top: 4rpx;
}
.min-price {
  color: #07c160;
  font-weight: bold;
}
.max-price {
  color: #d32f2f;
  font-weight: bold;
}
.price-time {
  color: #999;
  font-size: 22rpx;
}
.mini-chart-area {
  width: 100%;
  height: 160px;
  min-height: 120px;
  margin: 0;
}
ec-canvas {
  width: 100% !important;
  height: 100% !important;
  min-height: 120px;
  display: block;
}
.big-chart-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.big-chart-area {
  width: 90vw;
  height: 60vh;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.empty-tip {
  text-align: center;
  color: #bbb;
  font-size: 28rpx;
  margin-top: 60rpx;
} 