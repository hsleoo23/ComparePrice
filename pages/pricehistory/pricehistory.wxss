.search-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 0 24rpx;
}
.search-input {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
}
.search-btn {
  margin-left: 16rpx;
  height: 64rpx;
  padding: 0 32rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.chart-area {
  width: 100%;
  height: 480rpx;
  margin-top: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty-tip {
  text-align: center;
  color: #bbb;
  font-size: 28rpx;
  margin-top: 60rpx;
} 