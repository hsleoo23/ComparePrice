.item-card-header {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  margin-bottom: 24rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  width: 100%;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  overflow: hidden;
}

.item-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  margin-bottom: 24rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 100%;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  overflow: hidden;
}

.item-card.error { background: #fff3e0; }
.item-card.lowest { background: #e8f5e9; }
.item-card.highest { background: #ffebee; }

/* 保证item-card内的.cell和表头cell样式一致 */
.item-card .cell {
  padding: 20rpx 10rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border: none;
  background: none;
}

.item-card,
.table-header.item-card {
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}
.tag-row {
  display: flex;
  justify-content: flex-end;  /* ✅ 右对齐 */
  padding: 0 20rpx 12rpx 20rpx;  /* 左右内边距与卡片保持一致 */
}

/* 标签样式 */
.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 绝对定位样式（关键） */
.tag-abs {
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
}

.lowest-tag {
  color: #388e3c;
  /* background: rgba(76, 175, 80, 0.08); */
  border-radius: 0 0 12rpx 12rpx;
}
.highest-tag {
  color: #d32f2f;
  /* background: rgba(244, 67, 54, 0.08); */
  border-radius: 0 0 12rpx 12rpx;
}
